<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_search_mainImage"
            android:src="@drawable/noimage"
            android:scaleType="centerCrop"
            android:layout_width="120dp"
            android:layout_height="96dp" />
        <LinearLayout
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_search_viewCount"
                android:textStyle="bold"
                android:gravity="left"
                android:textSize="10sp"
                android:paddingLeft="5dp"
                android:textColor="@color/grey_600"
                android:text="View : 0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/item_search_dateTime"
                android:textSize="9sp"
                android:textColor="@color/grey_600"
                android:textStyle="italic"
                android:gravity="right"
                android:text="2018-00-00 00:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/item_search_title"
                android:gravity="center"
                android:text="spotTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@+id/item_search_location"
                    android:src="@drawable/ic_location_on_red" />

                <TextView
                    android:id="@+id/item_search_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="location..."
                    android:textColor="@color/grey_600"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>