<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="200dp"
    android:layout_width="200dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_post_map_userProfileImage"
                android:src="@drawable/noimage"
                android:scaleType="centerCrop"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/item_post_map_userNameTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/item_post_map_userProfileImage"
                android:text="User Name"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <LinearLayout
            android:padding="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_post_map_postCategory"
                android:gravity="left"
                android:text="Category :"
                android:textSize="7sp"
                android:textColor="@color/grey_600"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="7sp"
                android:id="@+id/item_post_map_postWriteDate"
                android:gravity="right"
                android:text="0000-00-00 00:00"
                android:textColor="@color/grey_600"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_post_map_postImage"
                android:scaleType="centerCrop"
                android:src="@drawable/noimage"
                android:layout_width="match_parent"
                android:layout_height="130dp" />
            <TextView
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="postComment"
                android:id="@+id/item_post_map_postContext"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>